  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Unit Tests",
      "program": "${workspaceRoot}/scripts/unit-tests.js",
      "preLaunchTask": null,
      "cwd": "${workspaceRoot}",
      "outFiles": [
        "${workspaceFolder}/compiled/**/*.js"
      ],
      "env": {
				"NODE_ENV": "tests"
			},
      "sourceMaps": true,
			"outDir": "${workspaceRoot}/compiled"
    }
  ]
}